<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textAlignment="center"
                android:textColor="@color/green_darkest"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Please consider to double checking before continuing process and finalizing. When you sure then proceed with submit button below."
                android:textAlignment="center"
                android:textColor="@color/green_darkest" />

            <TextView
                android:id="@+id/text_bulk_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="System will be updating N data in server"
                android:textAlignment="center"
                android:textColor="@color/green_darkest"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/drawable_solid_darkest"
                android:text="Submit" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>